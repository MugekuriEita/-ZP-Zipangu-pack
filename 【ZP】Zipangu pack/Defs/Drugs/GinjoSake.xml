<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<ThingDef ParentName="ZPDrugBase">
		<defName>ZPGinjoSake</defName>
		<label>吟醸酒</label>
		<description>白米と穀物で作った醸造アルコールを吟醸造りによって製造した清酒。\n華やかな香りですっきりした味わいが特徴のお酒。</description>
		<graphicData>
			<texPath>Things/Item/Drug/daiginjo</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<stackLimit>25</stackLimit>
		<statBases>
			<DeteriorationRate>0.5</DeteriorationRate>
			<MarketValue>15</MarketValue>
			<Mass>0.3</Mass>
		</statBases>
		<ingestible>
			<foodType>Fluid, Processed, Liquor</foodType>
			<nutrition>0.08</nutrition>
			<joyKind>Chemical</joyKind>
			<joy>0.20</joy>
			<nurseable>true</nurseable>
			<drugCategory>Social</drugCategory>
			<ingestSound>Ingest_Beer</ingestSound>
			<ingestHoldOffsetStanding>
				<northDefault>
					<offset>(0.18,0,0)</offset>
				</northDefault>
			</ingestHoldOffsetStanding>
			<ingestCommandString>Drink {0}</ingestCommandString>
			<ingestReportString>Drinking {0}.</ingestReportString>
			<chairSearchRadius>25</chairSearchRadius>
			<outcomeDoers>
				<li Class="IngestionOutcomeDoer_GiveHediff">
					<hediffDef>AlcoholHigh</hediffDef>
					<severity>0.15</severity>
					<toleranceChemical>Alcohol</toleranceChemical>
				</li>
				<li Class="IngestionOutcomeDoer_GiveHediff">
					<hediffDef>AlcoholTolerance</hediffDef>
					<severity>0.032</severity>
					<divideByBodySize>true</divideByBodySize>
				</li>
			</outcomeDoers>
		</ingestible>
		<equipmentType>Primary</equipmentType>
		<techLevel>Neolithic</techLevel>
		<comps>
			<li Class="CompProperties_Drug">
				<chemical>Alcohol</chemical>
				<addictiveness>0.010</addictiveness>
				<minToleranceToAddict>0.25</minToleranceToAddict>
				<existingAddictionSeverityOffset>0.20</existingAddictionSeverityOffset>
				<needLevelOffset>1</needLevelOffset>
				<listOrder>701</listOrder>
			</li>
			<li>
				<compClass>CompEquippable</compClass>
			</li>
		</comps>
		<tools>
			<li>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>8</power>
				<cooldownTime>1.8</cooldownTime>
			</li>
			<li>
				<label>neck</label>
				<capacities>
					<li>Poke</li>
				</capacities>
				<power>5</power>
				<cooldownTime>1.8</cooldownTime>
			</li>
		</tools>
	</ThingDef>
	<ThingDef ParentName="ResourceBase">
		<defName>R_GinjoSakeBarrel</defName>
		<label>吟醸酒樽</label>
		<description>吟醸酒の原料になる。</description>
		<graphicData>
			<texPath>Things/Item/Product/Yuidaru3</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(0.8,0.8)</drawSize>
		</graphicData>
		<statBases>
			<MarketValue>10</MarketValue>
		</statBases>
		<thingCategories>
			<li>Zipangu</li>
		</thingCategories>
	</ThingDef>
	<RecipeDef>
		<defName>R_CookAlcoholBarrel</defName>
		<label>吟醸酒樽</label>
		<description>吟醸酒の原料である吟醸酒樽を作る</description>
		<jobString>吟醸酒樽を作る</jobString>
		<workSpeedStat>CookSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_Brewing</soundWorking>
		<allowMixingIngredients>false</allowMixingIngredients>
		<workAmount>5000</workAmount>
		<workSkill>Cooking</workSkill>
		<skillRequirements>
			<Cooking>6</Cooking>
		</skillRequirements>
		<recipeUsers>
			<li>Brewery</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>WhiteRice</li>
					</thingDefs>
				</filter>
				<count>75</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>RawRice</li>
						<li>RawCorn</li>
						<li>RawPotatoes</li>
					</thingDefs>
				</filter>
				<count>75</count>
			</li>
		</ingredients>
		<products>
			<R_GinjoSakeBarrel>1</R_GinjoSakeBarrel>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>WhiteRice</li>
				<li>RawRice</li>
				<li>RawCorn</li>
				<li>RawPotatoes</li>
			</thingDefs>
		</fixedIngredientFilter>
	</RecipeDef>
	<RecipeDef>
		<defName>MakeGinjoSake</defName>
		<label>吟醸酒(25)</label>
		<description>吟醸酒を造る</description>
		<jobString>吟醸酒を造る</jobString>
		<workSpeedStat>CookSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_Brewing</soundWorking>
		<allowMixingIngredients>false</allowMixingIngredients>
		<workAmount>5000</workAmount>
		<workSkill>Cooking</workSkill>
		<skillRequirements>
			<Cooking>6</Cooking>
		</skillRequirements>
		<recipeUsers>
			<li>Brewery</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>R_GinjoSakeBarrel</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<products>
			<ZPGinjoSake>25</ZPGinjoSake>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>R_GinjoSakeBarrel</li>
			</thingDefs>
			<disallowedSpecialFilters>
				<li>AllowPlantFood</li>
			</disallowedSpecialFilters>
		</fixedIngredientFilter>
		<researchPrerequisite>ReSeasoning</researchPrerequisite>
	</RecipeDef>
</Defs>

<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!--=============== 大盾　Base 土嚢 ===============-->
	<ThingDef ParentName="ZP_BuildingBase">
		<defName>ZP_KaiShield</defName>
		<label>かい盾</label>
		<description>銃撃を防げる設置型の盾。\nカバー率が高く急造で作れる安価な盾だが、耐久度がかなり低く燃えるので要注意。</description>
		<graphicData>
			<texPath>Things/Buildings/yatate/yatate</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(1.8,1.8)</drawSize>
		</graphicData>
		<altitudeLayer>Building</altitudeLayer>
		<pathCost>40</pathCost>
		<pathCostIgnoreRepeat>true</pathCostIgnoreRepeat>
		<passability>PassThroughOnly</passability>
		<castEdgeShadows>true</castEdgeShadows>
		<fillPercent>0.75</fillPercent>
		<canOverlapZones>false</canOverlapZones>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<Beauty>-5</Beauty>
			<WorkToBuild>50</WorkToBuild>
			<Flammability>0.6</Flammability>
		</statBases>
		<building>
			<ai_chillDestination>false</ai_chillDestination>
			<isInert>true</isInert>
		</building>
		<placingDraggableDimensions>1</placingDraggableDimensions>
		<costList>
			<WoodLog>3</WoodLog>
		</costList>
		<filthLeaving>SandbagRubble</filthLeaving>
		<neverMultiSelect>true</neverMultiSelect>
		<designationCategory>Security</designationCategory>
		<staticSunShadowHeight>0.20</staticSunShadowHeight>
		<researchPrerequisites><li>ReDefenseBase</li></researchPrerequisites>
	</ThingDef>
	<!--=============== 火計用藁　Base 土嚢 ===============-->
	<ThingDef ParentName="ZP_BuildingBase">
		<defName>ZP_StrawLump</defName>
		<label>藁の塊</label>
		<description>燃えやすい藁の塊。並べてタイミングよく着火する事で火の壁を作り出せる。火を扱うので運用の際は注意が必要。</description>
		<graphicData>
			<texPath>Things/Buildings/newara_Atlas</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<linkType>Basic</linkType>
			<linkFlags>
				<li>Sandbags</li>
			</linkFlags>
		</graphicData>
		<blueprintGraphicData>
			<texPath>Things/Building/Linked/Sandbags_Blueprint_Atlas</texPath>
		</blueprintGraphicData>
		<uiIconPath>Things/Buildings/AnimalBed_waraUI</uiIconPath>
		<altitudeLayer>Building</altitudeLayer>
		<pathCost>40</pathCost>
		<pathCostIgnoreRepeat>true</pathCostIgnoreRepeat>
		<passability>PassThroughOnly</passability>
		<castEdgeShadows>true</castEdgeShadows>
		<fillPercent>0.20</fillPercent>
		<canOverlapZones>false</canOverlapZones>
		<statBases>
			<MaxHitPoints>150</MaxHitPoints>
			<Beauty>-5</Beauty>
			<WorkToBuild>100</WorkToBuild>
			<Flammability>5</Flammability>
		</statBases>
		<building>
			<ai_chillDestination>false</ai_chillDestination>
			<isInert>true</isInert>
		</building>
		<placingDraggableDimensions>1</placingDraggableDimensions>
		<costList>
			<FuelStraw>10</FuelStraw>
		</costList>
		<filthLeaving>SandbagRubble</filthLeaving>
		<rotatable>false</rotatable>
		<selectable>true</selectable>
		<neverMultiSelect>true</neverMultiSelect>
		<designationCategory>Security</designationCategory>
		<staticSunShadowHeight>0.20</staticSunShadowHeight>
		<constructEffect>ConstructDirt</constructEffect>
		<repairEffect>ConstructDirt</repairEffect>
		<researchPrerequisites><li>ReDefenseBase</li></researchPrerequisites>
	</ThingDef>
	<!--=============== 火計用藁　Base 土嚢 ===============-->
	<ThingDef ParentName="ZP_BuildingBase">
		<defName>ZP_StrawLump_Gunpowder</defName>
		<label>火薬藁</label>
		<description>火薬が混じってる藁の塊。着火する事で爆発させることができる。火を扱うので運用の際は注意が必要。</description>
		<graphicData>
			<texPath>Things/Buildings/newara_Atlas</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<color>(222,184,135)</color>
			<linkType>Basic</linkType>
			<linkFlags>
				<li>Sandbags</li>
			</linkFlags>
		</graphicData>
		<blueprintGraphicData>
			<texPath>Things/Building/Linked/Sandbags_Blueprint_Atlas</texPath>
		</blueprintGraphicData>
		<uiIconPath>Things/Buildings/AnimalBed_waraUI</uiIconPath>
		<altitudeLayer>Building</altitudeLayer>
		<pathCost>40</pathCost>
		<pathCostIgnoreRepeat>true</pathCostIgnoreRepeat>
		<passability>PassThroughOnly</passability>
		<castEdgeShadows>true</castEdgeShadows>
		<fillPercent>0.20</fillPercent>
		<canOverlapZones>false</canOverlapZones>
		<statBases>
			<MaxHitPoints>10</MaxHitPoints>
			<Beauty>-5</Beauty>
			<WorkToBuild>200</WorkToBuild>
			<Flammability>5</Flammability>
		</statBases>
		<building>
			<ai_chillDestination>false</ai_chillDestination>
			<isInert>true</isInert>
		</building>
		<placingDraggableDimensions>1</placingDraggableDimensions>
		<costList>
			<FuelStraw>50</FuelStraw>
			<Steel>3</Steel>
		</costList>
		<filthLeaving>SandbagRubble</filthLeaving>
		<rotatable>false</rotatable>
		<selectable>true</selectable>
		<neverMultiSelect>true</neverMultiSelect>
		<designationCategory>Security</designationCategory>
		<staticSunShadowHeight>0.20</staticSunShadowHeight>
		<constructEffect>ConstructDirt</constructEffect>
		<repairEffect>ConstructDirt</repairEffect>
		<tickerType>Normal</tickerType>
		<comps>
			<li Class="CompProperties_Explosive">
				<explosiveRadius>1.1</explosiveRadius>
				<explosiveDamageType>Flame</explosiveDamageType>
				<explosiveExpandPerStackcount>0.037</explosiveExpandPerStackcount>
				<startWickOnDamageTaken>Flame</startWickOnDamageTaken>
				<startWickHitPointsPercent>0.333</startWickHitPointsPercent>
				<preExplosionSpawnThingDef>FilthFuel</preExplosionSpawnThingDef>
				<preExplosionSpawnChance>1</preExplosionSpawnChance>
				<wickTicks>
					<min>70</min>
					<max>150</max>
				</wickTicks>
			</li>
		</comps>
		<researchPrerequisites><li>ReDefenseBase</li></researchPrerequisites>
	</ThingDef>
</Defs>

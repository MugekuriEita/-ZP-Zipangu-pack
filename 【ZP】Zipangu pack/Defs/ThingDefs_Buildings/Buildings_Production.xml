			<li Class="CompProperties_AffectedByFacilities">
				<linkableFacilities>
					<li>ToolCabinet</li>
				</linkableFacilities>
			</li>
		</comps>
		<placeWorkers>
			<li>PlaceWorker_ShowFacilitiesConnections</li>
		</placeWorkers>
		<recipes>
			<!-- ===== 建材用藁 ===== -->
			<li>MakeTatamiStraw30</li>
			<li>MakeTatamiStraw60</li>
			<!-- ===== 副産物袋 ===== -->
			<li>MakeRiceByproduct</li>
			<li>TakeRiceByproduct_RC</li>
			<li>TakeRiceByproduct_R</li>
			<li>TakeRiceByproduct_C</li>
			<!-- ===== 俵 作成 ===== -->
			<li>MakeStrawRiceBag_RawRice</li>
			<li>MakeStrawRiceBag_RiceMomi</li>
			<li>MakeStrawRiceBag_BrownRice</li>
			<li>MakeStrawRiceBag_WhiteRice</li>
			<!-- ===== 俵 解体 ===== -->
			<li>UnwindStrawRiceBag_RawRice</li>
			<li>UnwindStrawRiceBag_RiceMomi</li>
			<li>UnwindStrawRiceBag_BrownRice</li>
			<li>UnwindStrawRiceBag_WhiteRice</li>
			<!-- ===== 燃料 ===== -->
			<li>MakeMomigalite10</li>
			<li>MakeMomigalite50</li>
			<li>MakeMomigalite100</li>
			<li>MakeFuelStraw10</li>
			<li>MakeFuelStraw50</li>
			<li>MakeFuelStraw100</li>
			<!-- ===== 肥料 ===== -->
			<li>MakeR_Compost10</li>
			<li>MakeR_Compost50</li>
			<li>MakeR_Compost100</li>
			<!-- ===== 藁装備 ===== -->
			<li>WaraApparelDisassembly</li>
		</recipes>

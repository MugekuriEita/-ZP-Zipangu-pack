<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<TerrainDef ParentName="FloorBase">
		<defName>Tatami_Green</defName>
		<label>畳(緑)</label>
		<description>藁で作れる床材。畳は空気を浄化し湿度を調整する機能を持っている。\nまた難燃性も大変優れているので火事がおきても燃えない。</description>
		<texturePath>Things/Terrain/tatami_g</texturePath>
		<statBases>
			<Beauty>2</Beauty>
			<WorkToMake>1500</WorkToMake>
		</statBases>
		<costList>
			<TatamiStraw>3</TatamiStraw>
		</costList>
		<designationCategory>Zipangu</designationCategory>
	</TerrainDef>
	<TerrainDef ParentName="FloorBase">
		<defName>Tatami_Yellow</defName>
		<label>畳(黄)</label>
		<description>藁で作れる床材。畳は空気を浄化し湿度を調整する機能を持っている。\nまた難燃性も大変優れているので火事がおきても燃えない。</description>
		<texturePath>Things/Terrain/tatami_y</texturePath>
		<statBases>
			<Beauty>2</Beauty>
			<WorkToMake>1500</WorkToMake>
		</statBases>
		<costList>
			<TatamiStraw>3</TatamiStraw>
		</costList>
		<designationCategory>Zipangu</designationCategory>
	</TerrainDef>
	<!-- ============  土壌  ============-->
	<TerrainDef>
		<defName>ZP_Soil</defName>
		<label>土</label>
		<description>【肥沃度：100%】\n農業が可能な土壌にする。\n砂、氷面、砂利、荒い石材、滑らかな石材の上に土がしけます。</description>
		<texturePath>Terrain/Surfaces/Soil</texturePath>
		<edgeType>FadeRough</edgeType>
		<renderPrecedence>335</renderPrecedence>
		<pathCost>2</pathCost>
		<statBases>
			<Beauty>-1</Beauty>
			<Cleanliness>-1</Cleanliness>
			<WorkToMake>800</WorkToMake>
		</statBases>
		<constructEffect>ConstructDirt</constructEffect>
		<affordances>
			<li>Light</li>
			<li>Heavy</li>
			<li>GrowSoil</li>
			<li>Diggable</li>
		</affordances>
		<terrainFilthDef>FilthDirt</terrainFilthDef>
		<fertility>1.0</fertility>
		<takeFootprints>True</takeFootprints>
		<costList>
			<R_Compost>20</R_Compost>
		</costList>
		<researchPrerequisites><li>ReZPSoil</li></researchPrerequisites>
		<designationCategory>FarmingTool</designationCategory>
	</TerrainDef>
	<TerrainDef>
		<defName>ZP_SoilRich</defName>
		<label>肥えた土</label>
		<description>【肥沃度：140%】\n農業が可能な土壌を肥沃度の高い肥えた土にする。</description>
		<texturePath>Terrain/Surfaces/SoilRich</texturePath>
		<statBases>
			<Beauty>-1</Beauty>
			<Cleanliness>-1</Cleanliness>
			<WorkToMake>800</WorkToMake>
		</statBases>
		<constructEffect>ConstructDirt</constructEffect>
		<edgeType>FadeRough</edgeType>
		<renderPrecedence>335</renderPrecedence>
		<pathCost>2</pathCost>
		<affordances>
			<li>Light</li>
			<li>Heavy</li>
			<li>GrowSoil</li>
			<li>Diggable</li>
		</affordances>
		<terrainFilthDef>FilthDirt</terrainFilthDef>
		<fertility>1.4</fertility>
		<takeFootprints>True</takeFootprints>
		<costList>
			<R_Compost>10</R_Compost>
			<ZP_Earthworm>10</ZP_Earthworm>
		</costList>
		<terrainAffordanceNeeded>GrowSoil</terrainAffordanceNeeded>
		<researchPrerequisites><li>ReZPSoilRich</li></researchPrerequisites>
		<designationCategory>FarmingTool</designationCategory>
	</TerrainDef>
	<TerrainDef>
		<defName>ZP_Mud</defName>
		<label>泥</label>
		<description>水田のために土壌を泥にする。</description>
		<texturePath>Terrain/Surfaces/Mud</texturePath>
		<statBases>
			<Beauty>-2</Beauty>
			<Cleanliness>-2</Cleanliness>
			<WorkToMake>2000</WorkToMake>
		</statBases>
		<pathCost>12</pathCost>
		<edgeType>FadeRough</edgeType>
		<renderPrecedence>335</renderPrecedence>
		<constructEffect>ConstructDirt</constructEffect>
		<affordances>
			<li>Undefined</li>
		</affordances>
		<terrainFilthDef>FilthDirt</terrainFilthDef>
		<fertility>0</fertility>
		<takeFootprints>True</takeFootprints>
		<acceptFilth>false</acceptFilth>
		<avoidWander>true</avoidWander>
		<costList>
			<ZP_Mud>30</ZP_Mud>
		</costList>
		<researchPrerequisites><li>ReZPMud</li></researchPrerequisites>
		<designationCategory>FarmingTool</designationCategory>
	</TerrainDef>
	<TerrainDef>
		<defName>ZP_LandfillSoil</defName>
		<label>埋立土壌</label>
		<description>【肥沃度：50%】\n足場の悪い場所を埋立てる。\n泥、沼、浅瀬、沿岸流を埋め立てます。</description>
		<texturePath>Terrain/Surfaces/Soil</texturePath>
		<edgeType>FadeRough</edgeType>
		<renderPrecedence>335</renderPrecedence>
		<pathCost>2</pathCost>
		<statBases>
			<Beauty>-1</Beauty>
			<Cleanliness>-1</Cleanliness>
			<WorkToMake>2000</WorkToMake>
		</statBases>
		<constructEffect>ConstructDirt</constructEffect>
		<affordances>
			<li>Light</li>
			<li>Heavy</li>
			<li>GrowSoil</li>
			<li>Diggable</li>
		</affordances>
		<terrainFilthDef>FilthDirt</terrainFilthDef>
		<fertility>0.5</fertility>
		<takeFootprints>True</takeFootprints>
		<costList>
			<R_Compost>30</R_Compost>
		</costList>
		<terrainAffordanceNeeded>Undefined</terrainAffordanceNeeded>
		<researchPrerequisites><li>ReZPLandfillSoil</li></researchPrerequisites>
		<designationCategory>FarmingTool</designationCategory>
	</TerrainDef>
</Defs>

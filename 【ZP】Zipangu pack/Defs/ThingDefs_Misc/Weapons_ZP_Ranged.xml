	<!-- =======================クナイ投げ================================= -->
	<ThingDef ParentName="BaseProjectileNeolithic">
		<defName>kunai_ao</defName>
		<label>ThrowingKunai</label>
		<graphicData>
			<texPath>Things/Projectile/kunai_ao</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile>
			<flyOverhead>false</flyOverhead>
			<damageDef>Arrow</damageDef>
			<damageAmountBase>10</damageAmountBase>
			<speed>64</speed>
		</projectile>
	</ThingDef>
	<ThingDef ParentName="ZPWeaponNeolithic">
		<defName>Kunai_Ranged</defName>
		<label>Kunai</label>
		<description>Kunai liked survival knife. When you equipped it you feel like a ninja and you can run fast.</description>
		<recipeMaker>
			<researchPrerequisite>BlacksmithApprentice</researchPrerequisite>
			<skillRequirements>
				<Crafting>6</Crafting>
			</skillRequirements>
		</recipeMaker>
		<graphicData>
			<texPath>Things/Item/Equipment/WeaponRanged/kunai_ao</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>BowSmall</soundInteract>
		<statBases>
			<WorkToMake>12000</WorkToMake>
			<Mass>0.8</Mass>
			<AccuracyTouch>0.89</AccuracyTouch>
			<AccuracyShort>0.64</AccuracyShort>
			<AccuracyMedium>0.41</AccuracyMedium>
			<AccuracyLong>0.22</AccuracyLong>
			<RangedWeapon_Cooldown>1.60</RangedWeapon_Cooldown>
			<Weapon_Bulk>0.5</Weapon_Bulk>
		</statBases>
		<costStuffCount>50</costStuffCount>
		<equippedStatOffsets>
			<MoveSpeed>+0.23</MoveSpeed>
		</equippedStatOffsets>
		<costList>
			<Steel>60</Steel>
		</costList>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>kunai_ao</defaultProjectile>
				<warmupTime>1.30</warmupTime>
				<range>20</range>
				<soundCast>BowSmall</soundCast>
			</li>
		</verbs>
		<tools>
			<li>
				<capacities>
					<li>Cut</li>
					<li>Poke</li>
				</capacities>
				<power>4</power>
				<cooldownTime>0.6</cooldownTime>
			</li>
		</tools>
		<weaponTags>
			<li>Kunai_Ranged</li>
		</weaponTags>
	</ThingDef>

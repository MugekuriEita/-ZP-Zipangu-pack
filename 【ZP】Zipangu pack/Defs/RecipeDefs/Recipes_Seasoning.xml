		<workAmount>5000</workAmount>
		<workSkill>Cooking</workSkill>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>ZP_Rice</li>
					</categories>
				</filter>
				<count>5</count>
			</li>
		</ingredients>
		<products>
			<R_Syrup>10</R_Syrup>

	<RecipeDef>
		<defName>MakeRiceStoneSlurryRice10</defName>
		<label>籾米を玄米にする(10)</label>
		<description>臼で籾を外して玄米と籾殻にわける。</description>
		<jobString>籾摺りをする</jobString>
		<workAmount>500</workAmount>
		<workSpeedStat>CookSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_CookMeal</soundWorking>
		<workSkill>Growing</workSkill>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>RiceMomi</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
		</ingredients>
		<products>
			<Chaff>10</Chaff>
			<BrownRice>10</BrownRice>
		</products>
		<fixedIngredientFilter>
			<exceptedCategories>
				<li>AnimalProductRaw</li>
				<li>MeatRaw</li>
				<li>PlantFoodRaw</li>
			</exceptedCategories>
			<thingDefs>
				<li>RiceMomi</li>
